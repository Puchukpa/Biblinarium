<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="15dp"
    android:background="@color/grayBackground"
    tools:context=".mvvm.views.ui.elements.buttons.ClubButtonFragment">

    <Button
        android:id="@+id/button_fragment_forum_clubButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"/>

    <ImageView
        android:id="@+id/imageView_element_buttons_clubImage"
        android:layout_width="65dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:background="@color/grayForeground"
        android:src="@drawable/empty_image" />

    <LinearLayout
        android:id="@+id/layout_element_buttons_clubText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/imageView_element_buttons_clubImage"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_element_buttons_clubName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clubName"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/rubik"/>

        <TextView
            android:id="@+id/textView_element_buttons_clubTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clubTheme"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic"
            android:fontFamily="@font/rubik"/>

        <TextView
            android:id="@+id/textView_element_buttons_clubMembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clubSize"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/rubik"/>

    </LinearLayout>
</RelativeLayout>
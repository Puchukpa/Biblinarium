<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_books"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pages.books.BooksFragment">


    <!-- Header -->
    <View
        android:id="@+id/view_books_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/fragmentBackground" />
    <TextView
        android:id="@+id/textView_books_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/rubik"
        android:gravity="center_vertical"
        android:text="@string/title_books"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold" />


    <!-- Searching panel -->
    <fragment
        android:id="@+id/fragment_books_searchingPanel"
        android:name="com.project.biblinarium.ui.elements.SearchingLineElement"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/view_books_header"
        android:layout_marginTop="15dp" />


    <!-- Main panel -->
    <RelativeLayout
        android:id="@+id/layout_books_mainPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_books_searchingPanel"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:background="@color/fragmentBackgroundLight">

    </RelativeLayout>
</RelativeLayout>